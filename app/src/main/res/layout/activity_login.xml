<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录后保存阅读习惯"/>
    <TextView
        android:id="@+id/text3"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "打造你的专属头条"/>

<LinearLayout
    android:id="@+id/linerLogin"
    android:layout_below="@id/text3"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/tsp">

    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="3"
        android:hint="请输入手机号"/>
    <View
        android:layout_gravity="center"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="#000"/>

    <TextView
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="     获得验证码"/>

</LinearLayout>
    <EditText
        android:id="@+id/addcade"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linerLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/tsp"
        android:hint="请输入验证码"/>

    <TextView
        android:id="@+id/text2"
        android:layout_below="@id/addcade"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="输入即可注册或登录"/>
    <TextView
        android:id="@+id/log"
        android:layout_below="@id/text2"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tsp"
        android:layout_marginTop="10dp"
        android:text="立即进入"/>

    <TextView
        android:layout_below="@id/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="帐号密码登录"/>


    <LinearLayout
        android:id="@+id/loginmethod"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qzone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/account_icon_qzone"/>
        <ImageView
            android:id="@+id/weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/account_icon_weixin"/>

        <ImageView
            android:id="@+id/weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/account_icon_weibo"/>

        <ImageView
            android:id="@+id/renren"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/account_icon_renren"/>
        <ImageView
            android:id="@+id/tencent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/account_icon_tencent"/>
    </LinearLayout>

    <TextView
        android:layout_above="@id/loginmethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="更多登录方式"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/follow_close_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp" />
</RelativeLayout>