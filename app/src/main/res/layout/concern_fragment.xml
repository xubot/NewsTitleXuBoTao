<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="我的关注"/>

    <ImageView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/attention_plus"
        android:layout_alignBottom="@+id/textview"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />

    <LinearLayout
        android:id="@+id/goodman"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/s"
        android:orientation="horizontal"
        android:layout_below="@+id/textview"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addicon_title_dynamic_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="好友动态"/>
    </LinearLayout>

    <LinearLayout
    android:id="@+id/more"
    android:layout_below="@id/goodman"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/repost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:src="@drawable/addicon_repost_pressed"
        android:layout_gravity="center"
        android:background="@drawable/sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="添加更多"/>
    </LinearLayout>

</RelativeLayout>