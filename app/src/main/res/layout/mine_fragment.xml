<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="#000">
        <ImageView
            android:id="@+id/imagepione"
            android:layout_width="0dp"
            android:layout_weight="3"
             android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/cellphoneicon_login_profile"/>
        <ImageView
            android:id="@+id/imageweixin"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/weixin_allshare_normal"/>
        <ImageView
            android:id="@+id/imageqq"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/qq_allshare_normal"/>
        <ImageView
            android:id="@+id/imagearow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/arrow_all_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/s">
        <LinearLayout
            android:id="@+id/linearStar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imagstar"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="35dp"
                android:src="@drawable/film_star_edge"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="收藏"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imagTime"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/detail_time_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="历史"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearNight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imagnight"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/nighticon_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="夜间"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineartong"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/s"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="消息通知"
            android:id="@+id/textView" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearshop1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/s"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="头条商城"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearshop2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/s"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="京东特供"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/s"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="我要爆料"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/s"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="用户反馈"
            android:id="@+id/textView2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/s"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="系统设置" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"/>
    </LinearLayout>
</LinearLayout>